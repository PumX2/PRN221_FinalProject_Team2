@page
@model PRN221_FinalProject_Team2.Pages.LoginModel

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>

                            @if (TempData["msg"] != null)
                            {
                                <p><span style="color:red">@TempData["msg"]</span></p>
                            }

                            <form method="post">
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Account.Email" class="form-control form-control-lg" />
                                    <label class="form-label" for="Account_Email">Email</label>
                                    <span asp-validation-for="Account.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Account.Password" class="form-control form-control-lg" />
                                    <label class="form-label" for="Account_Password">Password</label>
                                    <span asp-validation-for="Account.Password" class="text-danger"></span>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                            </form>


                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? <a href="Sigup" class="text-white-50 fw-bold">Sign Up</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<style>
    .container {
        max-width: 100%;
        max-height: 100%;
    }

    .gradient-custom {
        /* fallback for old browsers */
        background: #6a11cb;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }

    .vh-100 {
        height: 100vh;
    }

    .card {
        border-radius: 1rem;
    }

    .card-body {
        padding: 2rem;
    }

    h2 {
        margin-bottom: 1.5rem;
        font-size: 2rem;
        font-weight: 700;
    }

    .text-white-50 {
        color: rgba(255, 255, 255, 0.5) !important;
    }

    .form-outline {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .form-outline input {
            background: transparent;
            border: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.5);
            border-radius: 0;
            color: #fff;
            outline: 0;
            width: 100%;
        }

        .form-outline label {
            color: rgba(255, 255, 255, 0.5);
        }

        .form-outline input:focus {
            border-color: #fff;
            box-shadow: none;
        }

    .btn-outline-light {
        border-color: #fff;
        color: #fff;
    }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #000;
        }

    .fab {
        font-size: 1.5rem;
    }
</style>