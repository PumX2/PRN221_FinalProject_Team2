@page
@model PRN221_FinalProject_Team2.Pages.EditProfileAdminModel
@{
}
<section class="products section bg-gray" style="height: 140vh">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 title text-center">
                <ul class="list-group">
                    <li class="list-group-item" style="margin-left: 5%; background-color: #1bbb1b;">
                        <a href="EditProfileAdmin" style="color: white;">Edit profile</a>
                    </li>
                    <li class="list-group-item" style="margin-left: 5%;">
                        <a href="ChangePasswordAdmin">Change password</a>
                    </li>
                </ul>
            </div>

            <div class="col-lg-10 title text-center" style="margin-left: 4%">
                <h2 class="text-center" style="font-size: 40px;">Profile</h2>
                <p style="color:red;">@ViewData["message"]</p>
                <p style="color:green;">@ViewData["mess"]</p>

                <form method="post" class="text-left clearfix" style="margin-top: 20px; max-width: 1000px; margin: auto;">
                    @*                     <div class="form-group">
                    <input type="hidden" asp-for="@Model.Employee.EmployeeId" /><br />
                    </div>
                    <div class="form-group">
                    <input type="hidden" asp-for="@Model.Account.Employee.EmployeeId" /><br />
                    </div>
                    <div class="form-group">
                    <input type="hidden" asp-for="@Model.Account.AccountId" /><br />
                    </div>
                    <div class="form-group">
                    <input type="hidden" asp-for="@Model.Employee.EmployeeId" /><br />
                    </div>
                    <div class="form-group">
                    <input type="hidden" asp-for="@Model.Employee.DepartmentId" /><br />
                    </div>
                    <div class="form-group">
                    <input type="hidden" asp-for="@Model.Account.Password" /><br />
                    </div>
                    <div class="form-group">
                    <input type="hidden" asp-for="@Model.Account.Email" /><br />
                    </div>
                    <div class="form-group">
                    <input type="hidden" asp-for="@Model.Account.Role" /><br />
                    </div> *@

                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Last Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Employee.LastName" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">First Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Employee.FirstName" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Title:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Employee.Title" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Title Of Courtesy:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Employee.TitleOfCourtesy" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Birth Date:</label>
                                <div class="col-sm-9">
                                    <input type="date" asp-for="@Model.Account.Employee.BirthDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Hire Date:</label>
                                <div class="col-sm-9">
                                    <input type="date" asp-for="@Model.Account.Employee.HireDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Address:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Employee.Address" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    @{
                        if (TempData["msg"] != null)
                        {
                            <p><span style="color: green;">@TempData["msg"]</span></p>
                        }
                    }
                    @{
                        if (TempData["err"] != null)
                        {
                            <p><span style="color: red;">@TempData["err"]</span></p>
                        }
                    }

                    <div class="text-center" style="margin-top: 20px;">
                        <input type="submit" value="Update" class="btn btn-success" style="background-color: forestgreen; border: none; padding: 10px 20px; font-size: 16px; color: white;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
