@page
@model PRN221_FinalProject_Team2.Pages.SignupModel
@{
}
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h2 class="fw-bold mb-4 text-uppercase">Register Account</h2>

                        <form method="post">
                            @if (TempData["msg"] != null)
                            {
                                <p><span style="color:red">@TempData["msg"]</span></p>
                            }
                            <div class="form-outline form-white mb-4">
                                <input asp-for="Account.Email" class="form-control form-control-lg" />
                                <label class="form-label" for="Account_Email">Email</label>
                                <span asp-validation-for="Account.Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input asp-for="Account.Customer.CompanyName" class="form-control form-control-lg" />
                                <label class="form-label" for="Account_CompanyName">Company Name</label>
                                <span asp-validation-for="Account.Customer.CompanyName" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input asp-for="Account.Password" class="form-control form-control-lg" />
                                <label class="form-label" for="Account_Password">Password</label>
                                <span asp-validation-for="Account.Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="password" placeholder="Re-Password" name="confirm" class="form-control form-control-lg" />
                                <label class="form-label" for="RePassword">Re-Password</label>
                            </div>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>

                        </form>

                        <div class="mt-4">
                            <p class="mb-0">
                                Already have an account? <a href="Login" class="text-white-50 fw-bold">Log In</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .container {
        max-width: 100%;
        max-height: 100%;
    }

    .gradient-custom {
        background: #6a11cb;
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
    }

    .vh-100 {
        height: 100vh;
    }

    .card {
        border-radius: 1rem;
    }

    .card-body {
        padding: 2rem;
    }

    h2 {
        margin-bottom: 1.5rem;
        font-size: 2rem;
        font-weight: 700;
    }

    .text-white-50 {
        color: rgba(255, 255, 255, 0.5) !important;
    }

    .form-outline {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .form-outline input {
            background: transparent;
            border: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.5);
            border-radius: 0;
            color: #fff;
            outline: 0;
            width: 100%;
        }

        .form-outline label {
            color: rgba(255, 255, 255, 0.5);
        }

        .form-outline input:focus {
            border-color: #fff;
            box-shadow: none;
        }

    .btn-outline-light {
        border-color: #fff;
        color: #fff;
    }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #000;
        }
</style>
