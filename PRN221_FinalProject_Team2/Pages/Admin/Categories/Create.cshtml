@page
@model PRN221_FinalProject_Team2.Pages.Admin.Categories.CreateModel
@{
}

<h1>Create Category</h1>

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label class="control-label">Category Name</label>
				<input asp-for="Category.CategoryName" class="form-control" />
				<span class="text-danger" asp-validation-for="Category.CategoryName"></span>
			</div>
			<br />
			<div class="form-group">
				<label class="control-label">Description</label>
				<textarea asp-for="Category.Description" class="form-control"></textarea>
			</div>
			<br />
			<div class="form-group">
				<a class="btn btn-primary" href="javascript:history.back()">Back</a>
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>