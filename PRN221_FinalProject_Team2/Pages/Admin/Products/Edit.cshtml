@page
@model PRN221_FinalProject_Team2.Pages.Admin.Products.EditModel
@{
}

<h1>Edit Product</h1>

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<input hidden asp-for="Product.ProductId" class="form-control" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label class="control-label">Product Name</label>
				<input asp-for="Product.ProductName" class="form-control" />
				<span class="text-danger" asp-validation-for="Product.ProductName"></span>
			</div>
			<br />
			<div class="form-group">
				<label class="control-label">Category</label>
				<select asp-for="Product.CategoryId" asp-items="ViewBag.Category" class="form-control"></select>
			</div>
			<br />
			<div class="form-group">
				<label class="control-label">Quantity Per Unit</label>
				<input asp-for="Product.QuantityPerUnit" class="form-control" />
				<span class="text-danger" asp-validation-for="Product.QuantityPerUnit"></span>
			</div>
			<br />
			<div class="form-group">
				<label class="control-label">Unit Price</label>
				<input asp-for="Product.UnitPrice" class="form-control" />
				<span class="text-danger" asp-validation-for="Product.UnitPrice"></span>
			</div>
			<br />
			<div class="form-group">
				<label class="control-label">Units In Stock</label>
				<input asp-for="Product.UnitsInStock" class="form-control" />
				<span class="text-danger" asp-validation-for="Product.UnitsInStock"></span>
			</div>
			<br />
			<div class="form-group">
				<label class="control-label">Units On Order</label>
				<input asp-for="Product.UnitsOnOrder" class="form-control" />
				<span class="text-danger" asp-validation-for="Product.UnitsOnOrder"></span>
			</div>
			<br />
			<div class="form-group">
				<label class="control-label">Discontinued</label>
				<input asp-for="Product.Discontinued" />
			</div>
			<br />
			<div class="form-group">
				<a class="btn btn-primary" href="javascript:history.back()">Back</a>
				<input type="submit" value="Update" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>