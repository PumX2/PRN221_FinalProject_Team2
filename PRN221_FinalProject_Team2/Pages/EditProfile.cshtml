@page
@model PRN221_FinalProject_Team2.Pages.EditProfileModel
@{
}
<section class="products section bg-gray" style="height: 100vh">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-2 title text-center">
                <ul class="list-group">
                    <li class="list-group-item" style="margin-left: 5%; background-color: #1bbb1b; color: white;">
                        <a href="EditProfile" style="color: white;">Edit profile</a>
                    </li>
                    <li class="list-group-item" style="margin-left: 5%; background-color: #f5f5f5;">
                        <a href="ChangePassword">Change password</a>
                    </li>
                </ul>
            </div>

            <div class="col-lg-10 title text-center">
                <h2 class="text-center" style="margin-bottom: 20px;">Profile</h2>
                <p style="color:red">@ViewData["message"]</p>
                <p style="color:green">@ViewData["mess"]</p>
                <form method="post" class="text-left clearfix" style="margin-top: 20px; max-width: 1000px; margin: auto;">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Account.Role" /><br />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Account.Customer.CustomerId" /><br />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Account.AccountId" /><br />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Customer.CustomerId" /><br />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Customer" /><br />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Account.Password" /><br />
                    </div>

                    <div class="panel panel-default" style="border: 1px solid #ddd; border-radius: 4px; padding: 20px;">
                        <div class="panel-body">
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Company Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Customer.CompanyName" placeholder="Company Name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Contact Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Customer.ContactName" placeholder="Contact Name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Contact Title:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Customer.ContactTitle" placeholder="Contact Title" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row" style="margin: 10px;">
                                <label class="col-sm-3 col-form-label text-right">Address:</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="@Model.Account.Customer.Address" placeholder="Address" class="form-control" id="address">
                                </div>
                            </div>
                        </div>
                    </div>
                    @{
                        if (TempData["msg"] != null)
                        {
                            <p><span style="color: green">@TempData["msg"]</span></p>
                        }
                    }
                    @{
                        if (TempData["err"] != null)
                        {
                            <p><span style="color: red">@TempData["err"]</span></p>
                        }
                    }

                    <div class="text-center" style="margin-top: 20px;">
                        <input type="submit" value="Update" class="btn btn-success" style="background-color: forestgreen; border: none; padding: 10px 20px; font-size: 16px; color: white;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
